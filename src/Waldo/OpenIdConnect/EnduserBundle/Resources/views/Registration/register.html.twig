{% extends ":default:base.html.twig" %}

{% block title %}{% trans %}Register{% endtrans %}{% endblock title %}

{% macro has_errors(form) %}
    {% if form.vars.errors.count > 0 %}
 has-error 
    {% endif %}
{% endmacro %}


{% block bodyContent %}
    <div class="register-page">
        <h1>{% trans %}Create your account{% endtrans %}</h1>

        {{ form_start(form, { 'style': 'horizontal' }) }}

        <p class="mandatory">{% trans %}All fields bellow are mandatory{% endtrans %}</p>
                
        <div class="form-group {{ _self.has_errors(form.username) }}">
            {{ form_widget(form.username, {attr:{placeholder:form.username.vars.label}}) }}
            {{ form_errors(form.username) }}
        </div>

        <div class="form-group {{ _self.has_errors(form.email) }}">
            {{ form_widget(form.email, {attr:{placeholder:form.email.vars.label}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group {{ _self.has_errors(form.password.first) }}">
            {{ form_widget(form.password.first, {attr:{placeholder:form.password.first.vars.label}}) }}
            {{ form_errors(form.password.first) }}
        </div>

        <div class="form-group {{ _self.has_errors(form.password.second) }}">
            {{ form_widget(form.password.second, {attr:{placeholder:form.password.second.vars.label}}) }}
            {{ form_errors(form.password.second) }}
        </div>
      
        <div class="form-group">
            {{ form_widget(form.save, {attr:{class:'btn-block'}}) }}
        </div>
        
        {{ form_end(form) }}

    </div>

{% endblock bodyContent %}
