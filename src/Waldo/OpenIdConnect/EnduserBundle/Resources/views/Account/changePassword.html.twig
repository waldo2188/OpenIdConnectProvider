{% extends "WaldoOpenIdConnectEnduserBundle:Account:index.html.twig" %}

{% block title %}{{ parent() }} - {% trans %}Change password{% endtrans %}{% endblock title %}

{% block accountContent %}

    
    <h2>{% trans %}Change password{% endtrans %}</h2>
    
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success" role="alert">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
    <p class="mandatory">{% trans %}All fields marked with the little red stars are mandatory{% endtrans %}</p>
    {{ form_row(form.currentpassword) }}
    {{ form_row(form.password) }}
    {{ form_end(form) }}
    
{% endblock accountContent %}
